<% if resource.errors.any? %>
  <div id="error_explanation" class="flex mt-10 sm:mt-4 md:mt-0 items-center p-2 text-xl font-bold transition-all duration-300 ease-in-out transform lg:text-2xl z-50 rounded-lg bg-red-300 border-red-400 dark:bg-red-600 dark:border-red-600" role="alert" data-flash-type="alert">
    <%= icon("fa-solid", "circle-info", class:"text-base #{flash_type == 'notice' ? 'text-green-700' : 'text-red-700'}") %>
    <h2 class="w-full text-sm font-medium text-red-700">
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul class="w-full">
      <% resource.errors.full_messages.each do |message| %>
        <li class="text-red-700"><%= message %></li>
      <% end %>
    </ul>
    <button type="button" class="ms-auto -mx-1.5 -my-1.5 rounded-lg p-1.5 inline-flex items-center justify-center h-8 w-8 hover:bg-red-400 active:bg-red-400" data-action="flash#dismiss" aria-label="Close">
      <%= icon("fa-solid", "xmark", class:"text-xl #{flash_type == 'notice' ? 'text-green-700' : 'text-red-700'}") %>
    </button>
  </div>
<% end %>

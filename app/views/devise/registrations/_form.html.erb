  <section class="form">
    <%= form_with(model: resource, url: registration_path(resource_name), method: :put, local: true) do |form| %>
      <%#= form.error_notification %>
    <h1 class="flex-col items-center justify-center -mb-4 text-2xl font-bold text-center text-black  md:text-4xl underline">
      Update Password
    </h1>

      <div class="form-container">
        <div>
          <%= form.label :email %>
          <%= form.text_field :email, required: true, autofocus: true, placeholder: true %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <div>
          <%= form.label :current_password %>
          <%= form.password_field :current_password, required: true, placeholder: true %>
        </div>

        <div>
          <%= form.label :password %>
          <%= form.password_field :password, required: false, placeholder: true %>
        </div>

        <div>
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation,required: false, placeholder: true %>
        </div>
      </div>

      <div class="form-buttons">
        <%= link_to "Cancel", assignments_path, class: "btn-cancel" %>
        <%= form.submit "Update", class: "btn-submit" %>
      </div>
    <% end %>
  </section>
